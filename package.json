{
  "name": "company-website",
  "version": "1.0.0",
  "description": "公司官网 - 基于 VitePress 构建",
  "type": "module",
  "scripts": {
    "dev": "vitepress dev",
    "build": "vitepress build",
    "preview": "vitepress preview",
       "new:news": "node scripts/create-news.js",
    "check-env": "node check-env.js",
    "serve": "npm run build && vitepress preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "init:tailwind": "node scripts/init-tailwind.js",
    "clean": "rm -rf node_modules package-lock.json",
    "setup": "npm run check-env && npm install && npm run init:tailwind"
  },
  "keywords": [
    "vitepress",
    "company-website",
    "documentation",
    "vue"
  ],
  "author": "Your Company",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "mermaid": "^10.9.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vitepress": "^1.5.0",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vue": "^3.4.0",
      "gray-matter": "^4.0.3",
    "date-fns": "^2.30.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=11.0.0"
  }
}
